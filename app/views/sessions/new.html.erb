<h1 class="ui center aligned header">Welcome to MessageMe - <em>a complete Chat App</em></h1>
<h4 class="ui center aligned medium icon header">
  <i class="red circular power off icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed raised stackable grid">
    <div class="column">
      <div class="ui form">

        <%= form_with scope: :session, url: login_path, local: true do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter your username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%# <label>Password</label> %>
          <%= f.label :password %>
          <div class="ui left icon input">
            <%# <input type="password"> %>
            <%= f.password_field :password, placeholder: "Enter your password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%# <div class="ui red submit button">Login</div> %>
        <%= f.submit "Log in", class: "ui red submit button" %>
      </div>
      <% end %>

    </div>
    <div class="middle aligned column">
      <div class="ui big red button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
